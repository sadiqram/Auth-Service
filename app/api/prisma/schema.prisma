generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

enum AuditAction {
  register_success
  register_fail
  login_success
  login_fail
  logout_success
  logout_fail
  refresh_success
  refresh_fail
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  projectId String  @db.Uuid
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  email        String @unique
  passwordHash String

  role Role @default(user)

  refreshTokens RefreshToken[]
  auditLogs     AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, email]) // Key for multi-tenant requirement
  @@index([projectId])
  @@index([email])
}

model RefreshToken {
  id String @id @default(uuid()) @db.Uuid

  projectId String  @db.Uuid
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // store a hash of the refresh token, NOT the raw token
  tokenHash String @unique

  revokedAt DateTime?
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
}

model AuditLog {
  id String @id @default(uuid()) @db.Uuid

  projectId String  @db.Uuid
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Nullable because you may want to log attempts without a known user
  userId String? @db.Uuid
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  action AuditAction

  ip        String?
  userAgent String?

  // “timestamp”
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// may potentially remove this if multi-tenat design becomes too confusing
model Project {
  id   String @id @default(uuid()) @db.Uuid
  name String

  // Public identifier you can show in dashboards / logs (not secret)
  slug String @unique

  // API key: store only a hash (never store raw key)
  apiKeyHash String @unique

  // Optional: per-project JWT secrets (recommended for true “as-a-service”)
  // Store encrypted at rest in a real prod system. For portfolio, plain env/DB is fine.
  jwtAccessSecret  String
  jwtRefreshSecret String

  users         User[]
  auditLogs     AuditLog[]
  refreshTokens RefreshToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}
